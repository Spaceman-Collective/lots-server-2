generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username      String @id
  displayName   String
  characterSkin String @default("DEFAULT")
  userSalt      String
  passwordHash  String
  walletPubkey  String @default("")
  clientId      String @default("")
}

model UserCharacters {
  id       String  @id @default(uuid())
  username String
  selected Boolean
  amount   Int //-1 means infinite

  vitals Json
  stats  Json
  skills Json

  @@index([username])
  @@index([username, selected])
}

model UserEquipment {
  username  String @id
  inventory Json
  worn      Json
  vault     Json // {[itemId:string] : number}
}

model ItemLibrary {
  id        String   @id
  type      ItemType
  img       String //2d Image File
  model     String //3d Model File
  animation String //Animation to use when this item is used
  data      Json // See ItemSchema
}

enum ItemType {
  worn
  buff
  ammo
  castable
}
