generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username      String @id
  displayName   String
  characterSkin String @default("DEFAULT")
  userSalt      String
  passwordHash  String
  walletPubkey  String //external optional key to save
  clientId      String
}

model UserCharacters {
  id          String  @id @default(uuid())
  username    String
  selected    Boolean
  characterId String
  amount      Int //-1 means infinite

  vitals    Json
  stats     Json
  skills    Json
  inventory Json
  worn      Json

  @@index([username])
  @@index([username, selected])
}

